<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E6E6E6"
    tools:context="example.android.businessapp.MainActivity">

    <TextView

        android:text="MyBusiness"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:text="be together. not the same."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:id="@+id/textView2"
        android:paddingLeft="@dimen/activity_vertical_margin"/>

    <ImageView
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/image"
        android:id="@+id/imageView"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:text="Contact Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_txt"
                android:textStyle="bold"/>
            <TextView
                android:text="Website: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/website_txt"
                android:layout_below="@id/contact_txt"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:text="www.website.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:paddingRight="12dp"
                android:layout_below="@id/contact_txt"/>
            <TextView
                android:text="Phone: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_txt"
                android:layout_below="@id/website_txt"
                android:paddingLeft="12dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:text="0123456789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_txt2"
                android:paddingRight="12dp"
                android:layout_below="@id/website_txt"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">
        <TextView
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:text="Business description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_txt"
            android:textStyle="bold"/>
        <TextView
            android:paddingTop="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/lorem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:layout_below="@id/description_txt"
            android:textStyle="italic"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
